#Scripts
start() {
	if [[ "`pwd`" =~ "global-wrapper-service" ]]; then
		./global-wrapper-service
		#parse out the dir name instead
	else
		npm start
	fi
}

build() {
	if [[ "`pwd`" =~ "GoHome" ]]; then
		go build
		if [ $1 ]; then
			start
		fi
	elif [[ "`pwd`" =~ "fallback" ]]; then
		webpack
	elif [[ "`pwd`" =~ "wrapper" ]]; then
		grunt build
	else
		grunt build:dev
		if [ $1 ]; then
			start
		fi
	fi
}

monolithctl() {
	(core && vagrant ssh -c "/vagrant/dev/monolithctl $1")
}
