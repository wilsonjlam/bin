#Scripts
start() {
	if [[ "`pwd`" =~ "global-wrapper-service" ]]; then
		./global-wrapper-service
		#parse out the dir name instead
	else
		npm start
	fi
}

build() {
	if [[ "`pwd`" =~ "GoHome" ]]; then
		go build
		if [ $1 ]; then
			start
		fi
	elif [[ "`pwd`" =~ "fallback" ]]; then
		webpack
	elif [[ "`pwd`" =~ "cp-ui-app" ]]; then
		grunt build:dev
	else
		grunt build
	fi
	if [ $1 ]; then
		start
	fi
}


monolithctl() {
	if [ $1 = 'proxy' ]; then
		(core && vim dev/files/custom-proxy.conf)
	else
		(core && ./dev/monolithctl $@)
	fi
}

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
