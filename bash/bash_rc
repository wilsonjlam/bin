#Directories
QUALTRICSHOME="~/qualtrics"
GOHOME="$QUALTRICSHOME/GoHome"
alias 360="cd $QUALTRICSHOME/360"
alias Q="cd $QUALTRICSHOME"
alias core="cd $QUALTRICSHOME/core"
alias cpui="cd $QUALTRICSHOME/cp-ui-app"
alias gwc="cd $QUALTRICSHOME/global-wrapper-client"
alias gws="cd $GOHOME/src/gitlab-app.eng.qops.net/chrome-nav/global-wrapper-service"
alias hiera="cd $QUALTRICSHOME/hiera"
