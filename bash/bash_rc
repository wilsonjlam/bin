#Commands
alias agig="ag --ignore=*.spec.js --ignore=*.json"
alias repos="~/utility/update-all-repos.sh"
alias vg="vagrant"

alias beaut="grunt jsbeautifier"
alias kdebug="grunt karma:debug"
alias mtest="grunt mochaTest:server"
alias ttest="grunt karma:unit"

build() {
	if [[ "`pwd`" =~ "research-suite-wrapper" ]]; then
		grunt build
	elif [[ "`pwd`" =~ "global-wrapper-service" ]]; then
		go build
	else
		grunt build:dev
	fi
}
